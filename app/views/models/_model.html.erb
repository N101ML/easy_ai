<%= turbo_frame_tag dom_id(model) do %>
  <div class="text-white">
    <p class="my-5">
      <strong class="block mb-1 font-medium">Name:</strong>
      <%= model.name %>
    </p>

    <p class="my-5 border rounded-md">
      <strong class="block mb-1 font-medium">Platform Source:</strong>
      <%= model.platform_source %>
    </p>

    <p class="my-5 border rounded-md">
      <strong class="block mb-1 font-medium">Fine Tunes:</strong>
      <% @fine_tunes.each do |fine_tune| %>
        <%= fine_tune.name %>
      <% end %>
    </p>
  </div>
<% end %>
