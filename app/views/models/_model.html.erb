<div class="text-white">
  <div class="mx-2 my-2">
    <%= link_to model.name, models_path %>
  </div>

  <div class="mx-2">
    <strong class="mb-1 font-medium">Platform Source:</strong>
    <%= model.platform_source %>
  </div>

  <div class="mx-2">
    <strong class="mb-1 font-medium">Fine Tunes:</strong>
    <% @fine_tunes.each do |fine_tune| %>
      <%= fine_tune.name %>
    <% end %>
  </div>
</div>
