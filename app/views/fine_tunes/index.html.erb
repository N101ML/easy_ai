<div class="w-full">
  <% if notice.present? %>
    <p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 rounded-lg bg-green-50" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Fine tunes" %>

  <div class="flex items-center justify-between">
    <h1 class="text-4xl font-bold text-white">Fine tunes</h1>
    <%= link_to "New fine tune", new_fine_tune_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="fine_tunes" class="min-w-full">
    <% @fine_tunes.each do |fine_tune| %>
      <%= render fine_tune %>
      <p>
        <%= link_to "Show this fine tune", fine_tune, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
