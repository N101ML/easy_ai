<div class="w-full">
  <% if notice.present? %>
    <p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 rounded-lg bg-green-50" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Fine tunes" %>

  <div class="flex items-center justify-between">
    <h1 class="text-4xl font-bold text-white">Fine Tunes for <%= @model.name %></h1>
    <%= link_to "New fine tune", new_model_fine_tune_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <%= render partial: "shared/resource_table", locals: { 
    collection: @fine_tunes, 
    headers: [
      { label: "Name", basis: "1/4", content: ->(fine_tune) { fine_tune.name } },
      { label: "Platform", basis: "1/4", content: ->(fine_tune) { fine_tune.platform } },
      { label: "Platform Link", basis: "1/4", content: ->(fine_tune) { fine_tune.platform_link } },
      { label: "Source", basis: "1/4", content: ->(fine_tune) { link_to "source", fine_tune.platform_source }, class: "text-center" }
    ],
  }%>
</div>