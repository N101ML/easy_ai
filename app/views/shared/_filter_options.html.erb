<div class="mb-2 text-white bg-gray-800 border rounded-md">
  <div class="flex flex-wrap gap-4 p-2">
    <% @filters.each do |filter| %>
      <div class="flex flex-col p-2 mb-4">
        <h3 class="mb-2 text-center"><%= filter.to_s.titleize %></h3>
        <div class="flex flex-wrap gap-2">
          <% @filter_options[filter].each do |option| %>
            <div
              class="p-2 text-center border border-gray-300 rounded-md cursor-pointer"
              data-filter-highlight-target="filter"
              data-action="click->filter-highlight#select"
              data-filter-value="<%= option %>" 
              data-filter-type="<%= filter %>"
              >
              <span><%= titleize_filter(option, filter) %></span>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Reset Button -->
  <div class="p-4">
    <%= link_to "Reset Filters", "#",
      class: "px-4 py-2 text-white border rounded-md",
      data: { action: "click->filter-highlight#reset" } %>
  </div>
</div>
